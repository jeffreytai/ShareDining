<!--we should render this on everypage and simply link to the icons via use-->
<%= render 'shared/icons' %>
<nav class="main-nav">
  <a class="main-logo-link clearfix" href="<%= root_url %>"><h1 class="main-logo">ShareDining</h1></a>
  <label for="nav-search" class="nav-search-icon">
    <svg>
      <use xlink:href="#search"></use>
    </svg>
  </label>
  <input id="pac-input" type="text" class="nav-search" placeholder="Location" aria-label="Location" value="<%= @location %>">

  <ul class="landing-links">
    <% if user_signed_in? %>
        <li><%= link_to "Messages", root_url %></li>
        <li><%= link_to "Help", root_url %></li>
        <li><%= link_to current_user.first_name, root_url %></li>
        <li><%= link_to "Sign out", destroy_user_session_path %></li>
    <% else %>
        <li><%= link_to "About", root_url %></li>
        <li><a href="#" class="nav-login-button">Login</a></li>
        <li><a href="#" class="nav-signup-button">Sign Up</a></li>
    <% end %>
  </ul>
  <a href="<%= new_kitchen_path %>"><button class="transparent-button landing-rent-button">
    Rent Your Kitchen
  </button></a>
</nav>
