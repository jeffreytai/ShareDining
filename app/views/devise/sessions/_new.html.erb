<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, :placeholder => "Your Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, :placeholder => "Password", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field remember-me-field">
      <%= f.check_box :remember_me, class: "remember-me-checkbox" %>
      <%= f.label :remember_me, class: "remember-me-label" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

