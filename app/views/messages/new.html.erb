<body>
  <%= render("shared/menu") %>

  <main class="messages-main-container">
    <h1 class="messages-main-title">Send message to kitchen owner</h1>

    <%= form_tag messages_path, method: :post do %>
        <div>
          <%= label_tag 'message[subject]', 'Subject' %>
          <%= text_field_tag 'message[subject]', nil, required: true %>
        </div>

        <div>
          <%= label_tag 'message[body]', 'Message' %>
          <%= text_area_tag 'message[body]', nil, required: true %>
        </div>

        <div>
          <%= hidden_field_tag(:recipient_id, params[:kitchen_owner]) %>
        </div>

        <%= submit_tag 'Send', class: 'transparent-button' %>
    <% end %>
  </main>
</body>
